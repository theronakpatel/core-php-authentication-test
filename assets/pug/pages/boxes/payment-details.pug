- var chat_menu             = true;
- var theme_customizer      = true;
- var typeahead             = true;
- var typeahead_search      = true;
- var popper                = true;
- var tooltip               = true;
- var datatable             = true;
- var height_equal          = true;
doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader
        // page-wrapper Start
        .page-wrapper.box-layout
            include ../../components/header
            // Page Body Start
            .page-body-wrapper
                include ../../components/sidebar
                include ../../components/chat-sidebar
                .page-body
                    .container-fluid
                        .page-header
                            .row
                                .col
                                  .page-header-left
                                    h3 Payment Details
                                    ol.breadcrumb
                                        li.breadcrumb-item
                                          a(href='index.html')
                                            i(data-feather='home')
                                        li.breadcrumb-item Ecommerce
                                        li.breadcrumb-item.active Payment Details
                                include ../../components/bookmark
                    // Container-fluid starts
                    .container-fluid.credit-card
                      .row
                        // Individual column searching (text inputs) Starts
                        .col-xxl-8
                          .card.height-equal
                            .card-header
                              h5 Credit card 
                            .card-body
                              .row
                                .col-md-4.text-center
                                  img.img-fluid(src='../assets/images/ecommerce/card.png', alt='')
                                .col-md-8
                                  form.theme-form.mega-form
                                    .mb-3
                                      input.form-control(type='text', placeholder='Card number')
                                    .mb-3
                                      input.form-control(type='text', placeholder='First Name')
                                    .mb-3
                                      input.form-control(type='date')
                                    .mb-3
                                      input.form-control(type='text', placeholder='Full Name')
                        // Individual column searching (text inputs) Ends
                        // Debit Card Starts
                        .col-xxl-4.col-lg-6.debit-card
                          .card.height-equal
                            .card-header
                              h5 Debit card 
                            .card-body
                              form.theme-form.e-commerce-form.row
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='Full name here')
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='Card number')
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='CVV number')
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='CVC')
                                .col-12
                                  label.col-form-label.p-t-0 Expiration Date
                                .mb-3.col-6.p-r-0
                                  select.form-select(size='1')
                                    option Select Month
                                    option Jan
                                    option Fab
                                    option March
                                    option April
                                .mb-3.col-6
                                  select.form-select(size='1')
                                    option Select Year
                                    option 2015
                                    option 2016
                                    option 2017
                                    option 2018
                                    option 2019
                                .col-12
                                  button.btn.btn-primary-gradien.btn-block(type='button') Submit
                        // Debit Card Ends
                        // COD Starts
                        .col-xxl-4.col-lg-6
                          .card
                            .card-header
                              h5 COD
                            .card-body
                              form.theme-form.row
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='First Name')
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='Last name')
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='Pincode')
                                .mb-3.col-6
                                  input.form-control(type='number', placeholder='Enter mobile number')
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='State')
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='City')
                                .mb-3.col-12
                                  textarea.form-control(rows='3', placeholder='Address')
                                .col-12
                                  button.btn.btn-primary-gradien.btn-block(type='button') Submit
                        // COD Ends
                        // EMI Starts
                        .col-xxl-4.col-lg-6
                          .card
                            .card-header
                              h5 EMI
                            .card-body
                              form.theme-form.row
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='First Name')
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='Last name')
                                .mb-3.col-6.p-r-0
                                  input.form-control(type='text', placeholder='Pincode')
                                .mb-3.col-6
                                  select.form-select(size='1')
                                    option Bank Name
                                    option SBI
                                    option ICICI
                                    option KOTAK
                                    option BOB
                                .mb-3.col-12
                                  select.form-select(size='1')
                                    option Select Card
                                    option 2
                                    option 3
                                    option 4
                                    option 5
                                .mb-3.col-12
                                  select.form-select(size='1')
                                    option Select Duration
                                    option 2015-2016
                                    option 2016-2017
                                    option 2017-2018
                                    option 2018-2019
                                .mb-3.col-12
                                  ul.payment-opt
                                    li
                                      img(src='../assets/images/ecommerce/mastercard.png', alt='')
                                    li
                                      img(src='../assets/images/ecommerce/visa.png', alt='')
                                    li
                                      img(src='../assets/images/ecommerce/paypal.png', alt='')
                                .col-12
                                  button.btn.btn-primary-gradien.btn-block(type='button') Submit
                        // EMI Ends
                        // EMI Starts
                        .col-xxl-4.col-lg-6
                          .card
                            .card-header
                              h5 Net Banking
                            .card-body
                              form.theme-form.row
                                .mb-3.col-12
                                  input.form-control(type='text', placeholder='AC Holder name')
                                .mb-3.col-12
                                  input.form-control(type='text', placeholder='Account number')
                                .mb-3.col-6.p-r-0
                                  select.form-select(size='1')
                                    option Select Bank
                                    option SBI
                                    option ICICI
                                    option KOTAK
                                    option BOB
                                .mb-3.col-6
                                  input.form-control(type='text', placeholder='ICFC code')
                                .mb-3.col-12
                                  input.form-control(type='number', placeholder='Enter mobile number')
                                .mb-3.col-12
                                  input.form-control(type='text', placeholder='Other Details')
                                .col-12
                                  button.btn.btn-primary-gradien.btn-block(type='button') Submit
                        // EMI Ends
                    // Container-fluid Ends
                include ../../components/footer
        include ../../components/footer-files
